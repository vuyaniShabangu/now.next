extends layout

block content
  .page-header
    h3 Operator Completed Missions

  body
    table#exampleCrud1.display(cellspacing='0', width='100%')
      thead
        tr
          th User Email
          th Mission Type
          th Mission Description
          th Date and Time
          th Mission Cost
          th Comments
          th Results File
          th Status
          th operator
          th Mission Results
          th Ident
      tfoot
        tr
          th User Email
          th Mission Type
          th Mission Description
          th Date and Time
          th Mission Cost
          th Comments
          th Results File
          th Status
          th operator
          th Mission Results
          th Ident

    #droneResults.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel3')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4#myModalLabel3.modal-title Mission Results
          .modal-body
            form.form-horizontal(method='POST')
              .form-group
                label(class='col-sm-2 control-label', for='usern') Ordered by
                .col-sm-8
                  input.form-control(type='text', name='usern', id='usern')
              .form-group
                label(class='col-sm-2 control-label', for='date') Date
                .col-sm-8
                  input.form-control(name='date', id='date',  type="text"  )
              .form-group
                label(class='col-sm-2 control-label', for='description') Description
                .col-sm-8
                  textarea.form-control(rows='2', cols='30', name='description', id='description')
              .form-group
                label(class='col-sm-2 control-label', for='comments') Comments
                .col-sm-8
                  textarea.form-control(rows='5', cols='30', name='comments', id='comments')
          .modal-footer
            button.btn.btn-primary(type='button') Download Report
            button.btn.btn-danger(type='button', data-dismiss='modal') Close
