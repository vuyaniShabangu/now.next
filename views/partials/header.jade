nav#mainNav.navbar.navbar-default.navbar-fixed-top.navbar-custom
  .container
    .navbar-header.page-scroll
      a.navbar-brand(href='/') DRONR
      //  img(src='DRONR-home.svg',style="width:80%;height:80%;")

    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      if !user
        ul.nav.navbar-nav.navbar-right
          li.page-scroll
            a(href='/signup') Sign Up
          li.page-scroll
            a(href='/login') Login
      else
        ul.nav.navbar-nav.navbar-right
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | User: #{user.profile.name || user.email || user.id}&nbsp;
            ul.dropdown-menu
              li
                a.bluelink(href='/account') My Account
              li.divider
              li
                a.bluelink(href='/logout') Logout
      if user
        ul.nav.navbar-nav.navbar-left
          li.dropdown(class=(title == 'Operators') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown') Missions
              ul.dropdown-menu
                li(class=(title == 'Contact') ? 'active' : undefined)
                  a.bluelink(href='/addMission') Add Missions
                li.divider
                li
                  a.bluelink(href='/missionsdt') View missions
                li.divider
                li
                  a.bluelink(href='/userfinishedmissions') My Completed Missions
      if user && user.profile.role == 'Operator'
        ul.nav.navbar-nav.navbar-left
          li.dropdown(class=(title == 'Operators') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown') Operator Dashboard
              ul.dropdown-menu
                li
                  a.bluelink(href='/add-drone') Add Drone
                li.divider
                li
                  a.bluelink(href='manage-drones') Manage Drones
                li.divider
                li
                  a.bluelink(href='operatormissions') Select Missions
                li.divider
                li
                  a.bluelink(href='acceptedmissions') Accepted Missions
                li.divider
                li
                  a.bluelink(href='finishedmissions') Completed Missions
