.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        img(src='logo.jpg', alt='logo' style='width:100%;height:100%')
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if user
          li.dropdown(class=(title == 'Operators') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown') Missions
            ul.dropdown-menu
              li(class=(title == 'Contact') ? 'active' : undefined)
                  a(href='/contact') Add Missions
              li.divider
              li
                a(href='/missionsdt') View missions
              li.divider
              li
                a(href='/userfinishedmissions') My Completed Missions   
        if user
          li.dropdown(class=(title == 'Operators') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown') Operator Dashboard
            ul.dropdown-menu
              li
                a(href='/add-drone') Add Drone
              li.divider
              li
                a(href='manage-drones') Manage Drones
              li.divider
              li
                a(href='operatormissions') Select Missions
              li.divider
              li
                a(href='acceptedmissions') Accepted Missions
              li.divider
              li
                a(href='finishedmissions') Completed Missions
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
