extends layout

block content
  .page-header
    h3 Accepted Missions
  body
    table#acceptedmissionsgrid.display(cellspacing='0', width='100%')
      thead
        tr
          th User Email
          th Mission Type
          th Mission Description
          th Date and Time
          th Mission Budget
          th Status
          th Download Mission file
          th operator
          th Complete Mission
      tfoot
        tr
          th User Email
          th Mission Type
          th Mission Description
          th Date and Time
          th Mission Budget
          th Status
          th Download Mission file
          th operator
          th Complete Mission




  input(type='hidden', name='_csrf', id='_csrf',value=_csrf)


  #selectDrone.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
              h4#myModalLabel.modal-title Select drone
            .modal-body
              table#selectDroneTable.display(cellspacing='0', width='100%')
                thead
                  tr
                    th Manufactor
                    th Model
                    th Select
                    th Owner
                tfoot
                  tr
                    th Manufactor
                    th Model
                    th Select
                    th Owner

            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close

  #uploadFileMode.modal.fade(tabindex='-1', role='dialog', aria-labelledby='uploadLabel')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          button.close(type='button',data-dismiss='modal',aria-label='Close')
            span(aria-hidden='true') x
          h4#uploadLabel.modal-title Complete Mission
        .modal-body
          form.form-horizontal(method='POST')
            input(type='hidden', name='_csrf', id='_csrf',value=_csrf)
            .form-group
              label(class='col-sm-2 control-label', for='comment') Comments:
              .col-sm-8
                input.form-control(name='comment', id='comment',  type='text'  )
            .form-group
              label(class='col-sm-2 control-label', for='resUpload') Upload Results: (zip file)
              .col-sm-8
                input.form-control(type='file',name='resUpload',id='resUpload',accept='.zip')
        .modal-footer
          button.btn.btn-primary(type='button', data-dismiss='modal') Send Results
          button.btn.btn-default(type='button', data-dismiss='modal') Close
