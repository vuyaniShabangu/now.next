extends layout

block content
  .page-header
    h3 Missions
  body
    table#exampleCrud.display(cellspacing='0', width='100%')
      thead
        tr
          th User Email
          th Mission Type
          th Mission Description
          th Date and Time
          th Mission Budget
          th Delete
          th Edit  
          th Status
      tfoot
        tr
          th User Email
          th Mission Type
          th Mission Description
          th Date and Time
          th Mission Budget
          th Delete
          th Edit  
          th Status


  | 

  input(type='hidden', name='_csrf', id='_csrf',value=_csrf)


  #editForm.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
              h4#myModalLabel.modal-title Modal title
            .modal-body 
                  form.form-horizontal(method='POST')
                    .form-group
                      label(class='col-sm-2 control-label', for='missiontype') Mission Type
                      .col-sm-8
                        select.form-control(type='text', name='missiontype', id='missiontype', autofocus=true)
                          option(value='Video Recording') Video Recording
                          option(value='Photograph Surveilance') Photograph Surveilance
                          option(value='Object Point Cloud') object Point Cloud
                          option(value='Orthophoto') Orthophoto
                          option(value='Count objects') Count Objects
                    .form-group
                      label(class='col-sm-2 control-label', for='missiondesc') Mission Description
                      .col-sm-8
                        textarea.form-control(rows='7',type='text', name='missiondesc', id='missiondesc')
                    .form-group
                      label(class='col-sm-2 control-label', for='missiondate') date/time
                      .col-sm-8
                        input.form-control(name='missiondate', id='missiondate',  type="text"  )
                    .form-group
                      label(class='col-sm-2 control-label', for='budget') Budget (in Rands)
                      .col-sm-8
                        input.form-control(type='text', name='budget', id='budget')
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='button', id='saveChange') Save changes



