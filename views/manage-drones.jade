extends layout

block content
  .page-header
    h3 Manage Drones
    
  body
    input(type='hidden', name='_csrf', id='_csrf',value=_csrf)
    table#operatordronesTable.display(cellspacing='0', width='100%')
      thead
        tr
          th Manufacturer
          th Model
          th Owner
          th Delete
          th Edit
      tfoot
        tr
          th Manufacturer
          th Model
          th Owner
          th Delete
          th Edit

    #editDrone.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel2')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4#myModalLabel2.modal-title Edit Drone
            .modal-body
              form.form-horizontal(method='POST')
                .form-group
                  label(class='col-sm-2 control-label', for='manufacturer') Manufacturer
                  .col-sm-8
                    input.form-control(name='manufacturer', id='manufacturer',  type="text"  )
                .form-group
                  label(class='col-sm-2 control-label', for='model') Model
                  .col-sm-8
                    input.form-control(type='text', name='model', id='model')
                .form-group
                  label(class='col-sm-2 control-label', for='flytime') Fly Time
                  .col-sm-8
                    input.form-control(type='text', name='flytime', id='flytime')
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Close
              button.btn.btn-primary(type='button', id='saveDrone') Save changes
